@using BlazedWebScrapper.Data.Classes.Configuration;
<input type="checkbox" onchange="@DataChanged">
@if (FSpec.isFilteringAvailable)
{
    <label>Wyłącz okno filtrowania.</label>
    <div class="filterDiv">
        <input type="checkBox" @onchange="@(()=>{isCheckedMaxResults = !isCheckedMaxResults;})" class="filterCheckBoxMaxResults">
        <label class="filterLabelMaxResults">Ogranicz maksymalną ilość wyników z pojedyńczej strony</label>
        <select @bind=MaxBooksFromSite name="value" id="filteringNumberOfResults">
            <option value="1">1</option>
            <option value="20">20</option>
            <option value="50">50</option>
            <option value="100">100</option>
            <option value="200">200</option>
        </select>
        <br />
        <input type="checkBox" @onchange="@(()=>{isCheckedMaxPrice = !isCheckedMaxPrice;})" class="filterCheckBoxMaxPrice">
        <label class="filterLabelMaxPrice">Ustaw maksymalną cenę</label>
        <select @bind=MaxPrice name="value" id="filteringMaxPrice">
            <option value="1">1</option>
            <option value="20">20</option>
            <option value="50">50</option>
            <option value="100">100</option>
            <option value="200">200</option>
            <option value="500">500</option>
            <option value="1000">1000</option>
        </select>
        <br />
        <br />
        <button @onclick="SaveChanges" class="buttonSaveChanges">Zapisz zmiany</button>
        <br />
        <br />
        <div class="red-border">
            <h4 class="filteringWarning">Nie zamykaj okna jeżeli chcesz zachować filtrowanie.</h4>
        </div>
    </div>
}
else
{
    <label>Włącz okno filtrowania</label>
}
