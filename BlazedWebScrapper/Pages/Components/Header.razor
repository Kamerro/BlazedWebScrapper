<div>
    <div style="width:100%;height:50px;text-align:center;">
        <h2>Witaj dobry człowieku tutaj możesz wyszukać książki!</h2>
    </div>
    <div style="height:10px;width:100%">
    </div>
    <div style="margin-left:30%;width:100%">
        <input type="text" style="width:30%;height:60px; margin-bottom:30px" placeholder="@AuthorName @Title" @bind="@InputValue" @oninput="OnInputEvent" />
        <button type="button" @onclick="@(async () => await SearchPredefinedBook.InvokeAsync())"><img src="css/open-iconic/font/fonts/searchIcon.png"></button>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback<ChangeEventArgs> OnInputEvent { get; set; }
    [Parameter]
    public EventCallback SearchPredefinedBook { get; set; }
    [Parameter]
    public string InputValue { get; set; }
    [Parameter]
    public string AuthorName { get; set; }
    [Parameter]
    public string Title { get; set; }

}
